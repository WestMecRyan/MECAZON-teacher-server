{
  "name": "MECAZON-teacher-server",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:0-18",
  "remoteEnv": {
    // These assume you've set TEACHER_FRONT_END and TEACHER_BACK_END as secrets in your GitHub Codespace.
    "MONGO_CLIENT_URI": "${secret:TEACHER_FRONT_END}",
    "MONGO_SERVER_URI": "${secret:TEACHER_BACK_END}",
    "PORT": "3000"
  },
  "forwardPorts": [3000],
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "humao.rest-client"
      ]
    }
  },
  // (Optional) Additional features or settings can go here.
  "features": {}
}
